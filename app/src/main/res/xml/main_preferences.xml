<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:icon="@drawable/ic_person"
        android:summary="@string/preference_username_passwd_summary"
        android:title="Login information">
        <EditTextPreference
            android:key="pref_username"
            android:summary="@string/preference_username_summary"
            android:title="Username" />
        <EditTextPreference
            android:key="pref_password"
            android:password="true"
            android:summary="@string/preference_passwd_summary"
            android:title="Password" />
    </PreferenceCategory>
    <PreferenceCategory
        android:icon="@drawable/ic_settings_applications_black"
        android:title="@string/preference_title_settings_application">
        <CheckBoxPreference
            android:key="pref_detail"
            android:summary="@string/summary_detail_preference"
            android:title="@string/title_detail_preference" />

    </PreferenceCategory>
    <PreferenceScreen
        android:summary="@string/summary_abount_preference"
        android:title="@string/title_about_preference">

        <intent
            android:targetClass="ru.vif2ne.ui.AbountActivity"
            android:targetPackage="ru.vif2ne.ui" />
    </PreferenceScreen>
</PreferenceScreen>